#!name=02 Cookie
#!desc=Get Cookie
#!system=ios

[Rule]
DOMAIN,gslbali.ximalaya.com,REJECT
DOMAIN,gslbtx.ximalaya.com,REJECT

[Script]
# 喜马拉雅签到
# 后台退出手机喜马拉雅客户端的情况下,重新打开APP进入主页
喜马拉雅 Cookie = type=http-request,pattern=^https?:\/\/(mobile|mobilehera|mobwsa)\.ximalaya\.com\/app-skin-service\/skin\/,script-path=https://raw.githubusercontent.com/ClydeTime/Surge/main/Script/Task/xmly.js,requires-body=0
# 百度贴吧 获取 Cookie
# 先登录，浏览器访问一下: https://tieba.baidu.com 或者 https://tieba.baidu.com/index/
百度贴吧_获取 Cookie = type=http-request,pattern=^https?:\/\/tieba\.baidu\.com\/?.?,script-path=https://raw.githubusercontent.com/chavyleung/scripts/master/tieba/tieba.cookie.js
# 阿里云盘签到
# https://auth.aliyundrive.com/v2/account/token
阿里云盘签到 Cookie = requires-body=1,type=http-response,pattern=https:\/\/auth.aliyundrive.com\/v2\/account\/token,script-path=https://raw.githubusercontent.com/lowking/Scripts/master/ali/aliYunPanCheckIn.js

[MITM]
hostname = %APPEND% mobile.ximalaya.com, mobwsa.ximalaya.com, mobilehera.ximalaya.com, tieba.baidu.com, auth.aliyundrive.com